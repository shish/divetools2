{
    "name": "divetools2",
    "dependencies": {
        "hyperapp": "^2.0.10",
        "hyperapp-fx": "^2.0.0-beta.2",
        "hyperapp-jsx-pragma": "^1.2.0"
    },
    "scripts": {
        "build": "parcel build --public-url . src/index.html --experimental-scope-hoisting",
        "watch": "parcel watch --public-url . src/index.html",
        "serve": "parcel serve --port 1236 src/index.html"
    },
    "repository": "https://github.com/shish/divetools2/",
    "license": "GPL-3.0-only",
    "devDependencies": {
        "node-sass": "^4.12.0",
        "parcel-bundler": "^1.12.4",
        "parcel-plugin-pwa-manifest": "^2.9.2",
        "typescript": "^3.8.3"
    },
    "pwaManifest": {
        "name": "DiveTools",
        "shortName": "DiveTools",
        "startURL": ".",
        "theme": "#B9FFFF",
        "display": "standalone",
        "orientation": "portrait",
        "generateIconOptions": {
            "baseIcon": "./src/static/favicon.svg",
            "sizes": [
                192,
                384,
                512
            ],
            "genFavicons": true
        }
    }
}
